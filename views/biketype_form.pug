extends layout

block content
  div(class="hero-image")
    div(class="hero-content")
      div(class="hero-content-inner")
        h1(class='homeTitle') MOTOSPOT

          form(method='POST' action='')
            div.form-group
              label(for='name' class="formText") BikeType:
              input#name.form-control(type='text', placeholder='Adventure, naked, sport etc.' name='name' required='true' value=(undefined === biketype ? '' : biketype.name) )
            button.btn.btn-primary(type='submit') Submit

          if errors
            ul
              for error in errors
                li!= error.msg