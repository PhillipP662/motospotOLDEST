extends layout

block content
  div(class="hero-image")
    div(class="hero-content")
      div(class="hero-content-inner")
        h1 BikeType: #{biketype.name}

          div

            h4 Models
            dl
            each model in biketype_models
              dt
                a(class="linkedText" href=model.url) Name: #{model.model_name}
              dd(class="linkedText") Power: #{model.power} hp

            else
              p(class="emptyList") This biketype has no models.

          hr
          p(class="linkedParagraph")
            a(class="linkedText" href=biketype.url + '/delete') Delete biketype
          p(class="linkedParagraph")
            a(class="linkedText" href=biketype.url + '/update') Update biketype